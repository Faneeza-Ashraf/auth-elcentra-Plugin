<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/elegacy/db" VERSION="20230502" COMMENT="The table stores the legacy record of the user grades in a course after reenrollment in the same course."
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_elegacy_cls_enrol" COMMENT="Store the legacy data from 'local_elisprogram_cls_enrol' table.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="classid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="enrolmenttime" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="completetime" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="endtime" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="the date the course must be completed by"/>
        <FIELD NAME="completestatusid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="grade" TYPE="number" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" DECIMALS="5"/>
        <FIELD NAME="credits" TYPE="number" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false" DECIMALS="2" COMMENT="Credits awarded for this class."/>
        <FIELD NAME="locked" TYPE="int" LENGTH="2" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Lock the enrolment value."/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="local_elegacy_classid_ix" UNIQUE="false" FIELDS="classid"/>
        <INDEX NAME="local_elegacy_userid_ix" UNIQUE="false" FIELDS="userid"/>
        <INDEX NAME="local_elegacy_completetime_ix" UNIQUE="false" FIELDS="completetime"/>
        <INDEX NAME="local_elegacy_completestatusid_ix" UNIQUE="false" FIELDS="completestatusid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="local_elegacy_certissued" COMMENT="Store the legacy data from 'local_elisprogram_certissued' table.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="elegacyenrolid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="cm_userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ELIS curriculum user id"/>
        <FIELD NAME="cert_setting_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="local_elisprogram_certcfg foreign key"/>
        <FIELD NAME="cert_code" TYPE="char" LENGTH="40" NOTNULL="true" SEQUENCE="false" COMMENT="Unique certificate code"/>
        <FIELD NAME="timeissued" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Time certificate was issued to user"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Time created field"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="local_elegacy_elegacyenrolid_k" TYPE="foreign-unique" FIELDS="elegacyenrolid" REFTABLE="local_elegacy_cls_enrol" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="local_elegacy_cert_code_ix" UNIQUE="true" FIELDS="cert_code" COMMENT="Certificate code index"/>
        <INDEX NAME="local_elegacy_cm_userid_ix" UNIQUE="false" FIELDS="cm_userid" COMMENT="Curriculum user index"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
